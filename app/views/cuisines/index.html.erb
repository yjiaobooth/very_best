<div class="page-header">
  <h1>
    Cuisines
    <a href="/cuisines/new" class="btn btn-lg btn-success">New Cuisine</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Name</th>
        <th>Actions</th>
      </tr>

      <% @cuisines.each do |cuisine| %>
      <tr>
        <td><%= cuisine.name %></td>
        <td>
          <a href="/cuisines/<%= cuisine.id %>" class="btn btn-primary">Show</a>
          <a href="/cuisines/<%= cuisine.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_cuisine/<%= cuisine.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
